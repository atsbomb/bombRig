import bombRig
import importlib
importlib.reload(bombRig)

# UE5MAN
allLoc = bombRig.createAllControl('pelvis', followHipPosXZ=0, followHipRotY=0)
bombRig.createFkChain(targets=['pelvis', 'spine_01', 'spine_02', 'spine_03', 'spine_04', 'neck_01', 'head'], parent=allLoc, side='center')
bombRig.createFkChain(targets=['clavicle_l', 'upperarm_l', 'lowerarm_l', 'hand_l'], parent='spine_05', side='left')
bombRig.createFkChain(targets=['clavicle_r', 'upperarm_r', 'lowerarm_r', 'hand_r'], parent='spine_05', side='right')
bombRig.createIkChain(targets=['thigh_l', 'calf_l', 'foot_l'], parent='pelvis', space=allLoc, side='left', ikOffset=50)
bombRig.createIkChain(targets=['thigh_r', 'calf_r', 'foot_r'], parent='pelvis', space=allLoc, side='right', ikOffset=50)

# capoera Mixamo FBX
allLoc = bombRig.createAllControl('mixamorig:Hips', followHipPosXZ=0, followHipRotY=0)
bombRig.createFkChain(targets=['mixamorig:Hips','mixamorig:Spine','mixamorig:Spine1','mixamorig:Neck','mixamorig:Head'], parent=allLoc, side='center')
bombRig.createIkChain(targets=['mixamorig:LeftUpLeg', 'mixamorig:LeftLeg', 'mixamorig:LeftFoot'], parent='mixamorig:Hips', space=allLoc, side='left', ikOffset=50)
bombRig.createIkChain(targets=['mixamorig:RightUpLeg', 'mixamorig:RightLeg', 'mixamorig:RightFoot'], parent='mixamorig:Hips', space=allLoc, side='right', ikOffset=50)
bombRig.createIkChain(targets=['mixamorig:LeftArm', 'mixamorig:LeftForeArm', 'mixamorig:LeftHand'], parent='mixamorig:LeftShoulder', space=allLoc, side='left', ikOffset=50)
bombRig.createIkChain(targets=['mixamorig:RightArm', 'mixamorig:RightForeArm', 'mixamorig:RightHand'], parent='mixamorig:RightShoulder', space=allLoc, side='right', ikOffset=50)
